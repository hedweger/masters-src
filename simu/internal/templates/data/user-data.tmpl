#cloud-config

groups:
  - admingroup
  - cloud-users

users:
  - default
  - name: utko
    shell: /bin/bash
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: users, admin
    lock_passwd: false

hostname: {{ .Hostname }}
ssh_pwauth: true

chpasswd:
  list: |
    utko:{{ .Password }}
  expire: false

package_update: true
package_upgrade: true
{{- if .Packages }}
packages:
{{- range .Packages }}
  - {{ . }}
{{- end }}
{{- end }}

{{- if .Commands }}
runcmd:
{{- range .Commands }}
  - {{ . }}
{{- end }}
{{- end }}
